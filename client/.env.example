# Copy this file to .env.local and fill in your actual values
# Remember: All React environment variables must start with REACT_APP_

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# App Configuration
REACT_APP_NAME=BITSBids
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=BITS Pilani Student Auction Platform

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_IMAGE_UPLOAD=true

# Upload Configuration
REACT_APP_MAX_IMAGE_SIZE=5242880
REACT_APP_MAX_IMAGES_PER_ITEM=5

# Campus Configuration
REACT_APP_SUPPORTED_CAMPUSES=Pilani,Goa,Hyderabad,Dubai
REACT_APP_DEFAULT_CAMPUS=Pilani

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_PAYMENTS=true

# External Services (Get from respective platforms)
REACT_APP_RAZORPAY_KEY_ID=rzp_test_your-key-id
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn
